<Window x:Class="CodeTracker.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeTracker.Views"
        xmlns:vm="clr-namespace:CodeTracker.ViewModels"
        mc:Ignorable="d"
        Title="Register" Height="300" Width="250">
    <Window.DataContext>
        <vm:RegisterViewModel/>
    </Window.DataContext>
    <StackPanel Margin="10">
        <Label Content="Username"/>
        <TextBox Text="{Binding Username}" Width="100" HorizontalAlignment="Left"/>

        <Label Content="Password"/>
        <PasswordBox x:Name="psbx" PasswordChanged="psbx_PasswordChanged" HorizontalAlignment="Left" Width="100"/>

        <Label Content="Confirm Password"/>
        <PasswordBox HorizontalAlignment="Left" Width="100" x:Name="confpsbx" PasswordChanged="confpsbx_PasswordChanged"/>
        <Button Command="{Binding RegisterUserCommand}" Content="Create an account" Margin="0 20" Width="120" HorizontalAlignment="Left"/>
        <Button Content="Go to login" Command="{Binding GoToLoginCommand}" Width="120" HorizontalAlignment="Left"/>
    </StackPanel>
</Window>
